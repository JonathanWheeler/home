!-----------------------------------------------------------------------------
! appearance
!-----------------------------------------------------------------------------

! see "font5" in /etc/X11/app-defaults/XTerm
*font                       : -*-fixed-medium-r-*-*-15-*-*-*-*-*-*-*

! make Xft fonts beautiful on LCD monitors
Xft.dpi                     : 100
Xft.hinting                 : true
Xft.hintstyle               : hintfull

! enable colors in native X applications
#ifdef COLOR
*customization              : -color
#endif

! use the Human cursor theme from Ubuntu
Xcursor.theme               : Human

!-----------------------------------------------------------------------------
! XTerm
!-----------------------------------------------------------------------------

! interaction
XTerm*vt100.metaSendsEscape : True
XTerm*vt100.saveLines       : 9999

! appearance
XTerm*vt100.faceName        : Monospace:pixelsize=15
XTerm*vt100.showBlinkAsBold : True
XTerm*termName              : xterm-256color
XTerm*vt100.colorMode       : True
XTerm*vt100.colorBDMode     : True
XTerm*vt100.colorULMode     : True
XTerm*vt100.veryBoldColors  : 6

! The following colors are from the Wombat color scheme for Vim:
! http://dengmao.wordpress.com/2007/01/22/vim-color-scheme-wombat/
XTerm*vt100.background      : #242424
XTerm*vt100.foreground      : #f6f3e8
XTerm*vt100.cursorColor     : #e5786d
XTerm*vt100.colorBD         : #8ac6f2
XTerm*vt100.colorUL         : #95e454

! black
XTerm*vt100.color0          : #343434
XTerm*vt100.color8          : #343434

! red
XTerm*vt100.color1          : #e5786d
XTerm*vt100.color9          : #e5786d

! green
XTerm*vt100.color2          : #cae682
XTerm*vt100.color10         : #cae682

! yellow (from the Desert color scheme for Vim:
!         http://fugal.net/vim/colors/desert.html)
XTerm*vt100.color3          : khaki
XTerm*vt100.color11         : khaki

! blue
XTerm*vt100.color4          : #8ac6f2
XTerm*vt100.color12         : #8ac6f2

! magenta (green at hue 300)
XTerm*vt100.color5          : #e682e6
XTerm*vt100.color13         : #e682e6

! cyan (green at hue 180)
XTerm*vt100.color6          : #82e6e6
XTerm*vt100.color14         : #82e6e6

! white
XTerm*vt100.color7          : #f6f3e8
XTerm*vt100.color15         : #f6f3e8
