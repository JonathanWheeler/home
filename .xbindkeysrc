#keystate_numlock = enable
#keystate_scrolllock = enable
#keystate_capslock = enable



#auto docking
"acer-c720-docking"
    m:0x0 + c:70
    XF86Display 

#display config
"lxrandr"
    m:0x4 + c:70
    Control + XF86Display 

#mac expose
"admit1 skippy-xd"
    m:0x0 + c:71
    XF86Explorer 

#invert colors
"xcalib -invert -alter"
    m:0x4 + c:71
    Control + XF86Explorer 

#dim backlight
"xbacklight - 5"
    m:0x0 + c:72
    XF86MonBrightnessDown 

#shine backlight
"xbacklight + 5"
    m:0x0 + c:73
    XF86MonBrightnessUp 

#touchpad on/off
"synclient TouchpadOff=$(synclient | grep -c 'TouchpadOff.*0')"
    m:0x4 + c:74
    Control + XF86AudioMute 

#lock screen
"lxlock"
    m:0x4 + c:124
    Control + XF86PowerOff 

#
# End of xbindkeys configuration
