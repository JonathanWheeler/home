#fullscreen on/off
"wmctrl -r :ACTIVE: -b toggle,fullscreen"
    m:0x40 + c:70
    Mod4 + F4 

#window chooser
"admit1 skippy-xd"
    m:0x0 + c:250
    XF86ApplicationRight 

#lock screen
"xlock"
    m:0x4 + c:124
    Control + XF86PowerOff 

#dock laptop
"acer-c720-docking"
    m:0x8 + c:124
    Alt + XF86PowerOff 

#invert colors
"xcalib -invert -alter"
    m:0x1 + c:124
    Shift + XF86PowerOff 

#touchpad on/off
"synclient TouchpadOff=$(synclient | grep -c 'TouchpadOff.*0')"
    m:0xc + c:124
    Control+Alt + XF86PowerOff 

