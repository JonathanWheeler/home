#!/bin/sh -e
# Written in 2012 by Suraj N. Kurapati <https://github.com/sunaku>
vim --version | fgrep -q '+cryptv'
vim -u NONE -c "set $(tr '\n' ' ' <<SETTINGS)" -c 'colorscheme ron' "$@"
  nocompatible
  secure
  viminfo=
  history=0
  noswapfile
  noshelltemp
  nobackup
  nowritebackup
  cryptmethod=blowfish2
  foldmethod=marker
  foldlevel=0
  background=$(cat ~/.theme)
SETTINGS
