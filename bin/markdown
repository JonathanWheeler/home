#!/bin/sh
# Written in 2012 by Suraj N. Kurapati <https://github.com/sunaku>
exec redcarpet \
  --smarty \
  --parse-no_intra_emphasis \
  --parse-tables \
  --parse-fenced_code_blocks \
  --parse-autolink \
  --parse-strikethrough \
  --parse-superscript \
  --parse-highlight \
  --parse-footnotes \
  --render-xhtml \
  --render-safe_links_only \
  --render-with_toc_data \
  --render-prettify \
  "$@"
