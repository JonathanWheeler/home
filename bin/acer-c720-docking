#!/bin/sh -x
# Automatic docking configuration for Acer C720 Chromebook:
# it's "docked" when connected to an external HDMI display.

if xrandr | fgrep -q 'HDMI1 connected'; then
  xrandr --output HDMI1 --auto --dpi 96 --output eDP1 --off
  xinput | fgrep -q 'Logitech USB Trackball' && logitech-marble-mouse left
  if xinput | fgrep -q 'HID 05f3:0007'; then
    keyboard us
  else
    keyboard dvorak
  fi
else
  xrandr --auto
  xbacklight = 5
  keyboard dvorak
fi
