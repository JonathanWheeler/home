#
# wm independent hotkeys
#

XF86Display
	laptop-display

XF86ApplicationRight
	xcalib -invert -alter

XF86MonBrightnessUp
	xbacklight + 7

shift + XF86MonBrightnessUp
	xbacklight + 21

ctrl + XF86MonBrightnessUp
	xbacklight = 100

XF86MonBrightnessDown
	xbacklight - 7

shift + XF86MonBrightnessDown
	xbacklight - 21

ctrl + XF86MonBrightnessDown
	xbacklight = 0

XF86AudioRaiseVolume
	ponymix increase 5

shift + XF86AudioRaiseVolume
	ponymix increase 15

ctrl + XF86AudioRaiseVolume
	ponymix set-volume 100

XF86AudioLowerVolume
	ponymix decrease 5

shift + XF86AudioLowerVolume
	ponymix decrease 15

ctrl + XF86AudioLowerVolume
	ponymix set-volume 0

XF86AudioMute
	ponymix toggle

XF86PowerOff
	laptop-locker

ctrl + XF86PowerOff
	laptop-suspend

# terminal emulator
alt + ctrl + x
	st

alt + ctrl + {_,shift + }k
	chromium {_,--incognito}

alt + ctrl + j
	pcmanfm

# program launcher
alt + ctrl + e
	rofi -show run

alt + ctrl + a
	rofi -show window

# make sxhkd reload its configuration files:
alt + ctrl + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
alt + ctrl + shift + Escape
	bspc wm -d > "$BSPWM_STATE" && bspc quit

# close and kill
alt + ctrl + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
alt + ctrl + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
alt + ctrl + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
alt + ctrl + Return
	bspc node -s biggest

#
# state/flags
#

# set the window state
alt + ctrl + {w,v,z,b}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
alt + ctrl + {l,c,r}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
alt + ctrl + {_,shift + }{h,n,t,s}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# alt + ctrl + {f,g,comma,period}
alt + ctrl + {f,g,bracketleft,bracketright}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
alt + ctrl + {_,shift + }minus
	bspc node -f {next,prev}

# focus the next/previous desktop
# alt + ctrl + bracket{left,right}
alt + ctrl + {comma,period}
	bspc desktop -f {prev,next}

# focus the last node/desktop
alt + ctrl + {d,o}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
alt + ctrl + {u,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
alt + ctrl + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
alt + ctrl + shift + {h,n,t,s}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + shift + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + shift + d
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + ctrl + shift + o
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# expand the tiled space in the given direction
alt + ctrl + {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
alt + ctrl + shift + {Left,Down,Up,Right}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
alt + ctrl + super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

#
# pointer focus/move/resize
#

# focus
~button1
	bspc pointer -g focus

# start move/resize
alt + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
alt + @button{1-3}
	bspc pointer -u
