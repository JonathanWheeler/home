! This file was generated by running:
! % erb .Xresources.erb > .Xresources

!-----------------------------------------------------------------------------
! appearance
!-----------------------------------------------------------------------------

! see "font5" in /etc/X11/app-defaults/XTerm
*font                       : -*-fixed-medium-r-*-*-13-*-*-*-*-*-*-*

! enable colors in native X applications
#ifdef COLOR
*customization              : -color
#endif

! use the Human cursor theme from Ubuntu
Xcursor.theme               : Human

!-----------------------------------------------------------------------------
! Rxvt
!-----------------------------------------------------------------------------

! interaction
Rxvt.saveLines              : 8192
Rxvt.scrollTtyOutput        : False
Rxvt.scrollTtyKeypress      : True
Rxvt.scrollWithBuffer       : True
Rxvt.keysym.Control-Up      : \033[1;5A
Rxvt.keysym.Control-Down    : \033[1;5B
Rxvt.keysym.Control-Right   : \033[1;5C
Rxvt.keysym.Control-Left    : \033[1;5D

! appearance
Rxvt.font                   : xft:Monospace:pixelsize=13
Rxvt.scrollBar_right        : True
Rxvt.scrollBar_floating     : True

!-----------------------------------------------------------------------------
! XTerm
!-----------------------------------------------------------------------------

! interaction
XTerm*vt100.metaSendsEscape : True
XTerm*vt100.saveLines       : 8192

! appearance
XTerm*vt100.faceName        : Monospace:pixelsize=13
XTerm*vt100.colorMode       : True
XTerm*vt100.colorBDMode     : True
XTerm*vt100.colorULMode     : True
XTerm*vt100.showBlinkAsBold : True
XTerm*vt100.veryBoldColors  : 6

!-----------------------------------------------------------------------------
! terminal colorscheme
!
! These colors were taken from the Wombat color scheme for Vim:
! http://dengmao.wordpress.com/2007/01/22/vim-color-scheme-wombat/
!
! And adapted for Xresources by redrampage in June 2010:
! https://bitbucket.org/redrampage/dotfiles/src/38fb09ee9afb/.Xdefaults
!-----------------------------------------------------------------------------
<% ['Rxvt', 'XTerm*vt100'].each do |term| %>

<%= term %>.foreground      : #f6f3e8
<%= term %>.background      : #242424

!black
<%= term %>.color0          : #191919
<%= term %>.color8          : #252525

!red
<%= term %>.color1          : #e5786d
<%= term %>.color9          : #eb887e

!green
<%= term %>.color2          : #95e454
<%= term %>.color10         : #95f06d

!brown/yellow
<%= term %>.color3          : #cae682
<%= term %>.color11         : #daf682

!blue
<%= term %>.color4          : #6aa6c2
<%= term %>.color12         : #7ab6d2

!magenta
<%= term %>.color5          : #807caa
<%= term %>.color13         : #827ab1

!cyan
<%= term %>.color6          : #8ac6f2
<%= term %>.color14         : #a1cdcd

!white
<%= term %>.color7          : #ffffff
<%= term %>.color15         : #dddddd

!styles
<%= term %>.colorBD         : #8ac6f2
<%= term %>.colorUL         : #cae682

<% end %>

!-----------------------------------------------------------------------------
! screensaver
!-----------------------------------------------------------------------------

XLock.mode                  : space
XLock.erasemode             : no_fade
XLock.nice                  : 19

