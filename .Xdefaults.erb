!-----------------------------------------------------------------------------
! XTerm
!-----------------------------------------------------------------------------

! interaction
XTerm*vt100.metaSendsEscape : True
XTerm*vt100.saveLines       : 8192

! appearance
XTerm*vt100.faceName        : Tamsyn-11:antialias=false
XTerm*vt100.colorMode       : True
XTerm*vt100.colorBDMode     : True
XTerm*vt100.colorULMode     : True
XTerm*vt100.showBlinkAsBold : True
XTerm*vt100.veryBoldColors  : 6

!-----------------------------------------------------------------------------
! terminal color scheme
!
! These colors are from the xoria256 color scheme for Vim:
! http://www.vim.org/scripts/script.php?script_id=2140
!-----------------------------------------------------------------------------
<% ['Rxvt', 'XTerm*vt100'].each do |term| %>

<%= term %>.cursorColor     : #ffaf00<%# Cursor(guibg) %>
<%= term %>.foreground      : #d0d0d0<%# Normal(guifg) %>
<%= term %>.background      : #1c1c1c<%# Normal(guibg) %>

!black
<%= term %>.color0          : #121212<%# LineNr(guibg) %>
<%= term %>.color8          : #0a0a0a<%# color0(rgb) - 8 %>

!red
<%= term %>.color1          : #d78787<%# color9(r) - 8 %>
<%= term %>.color9          : #df8787<%# Special(guifg) %>

!green
<%= term %>.color2          : #afd787<%# color10(g) - 8 %>
<%= term %>.color10         : #afdf87<%# PreProc(guifg) %>

!yellow
<%= term %>.color3          : #f7f7af<%# color11(rg) - 8 %>
<%= term %>.color11         : #ffffaf<%# Special(guifg) %>

!blue
<%= term %>.color4          : #87afd7<%# color12(b) - 8 %>
<%= term %>.color12         : #87afdf<%# Statement(guifg) %>

!magenta
<%= term %>.color5          : #d7afd7<%# color13(rb) - 8 %>
<%= term %>.color13         : #dfafdf<%# Identifier(guifg) %>

!cyan
<%= term %>.color6          : #afd7d7<%# color14(gb) - 8 %>
<%= term %>.color14         : #afdfdf<%# green(#afdf87) + blue(#87afdf) %>

!white
<%= term %>.color7          : #e4e4e4<%# color15(rgb) - 8 %>
<%= term %>.color15         : #eeeeee<%# Folded(guifg) %>

!styles
<%= term %>.colorBD         : #dfafdf<%# htmlArg(guifg) %>
<%= term %>.colorUL         : #dfdfaf<%# htmlValue(guifg) %>

<% end %>

