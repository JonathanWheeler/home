!-----------------------------------------------------------------------------
! appearance
!-----------------------------------------------------------------------------

! see "font5" in /etc/X11/app-defaults/XTerm
*font                       : -*-fixed-medium-r-*-*-18-*-*-*-*-*-*-*

! make Xft fonts beautiful on LCD monitors
Xft.dpi                     : 96
Xft.hinting                 : true
Xft.hintstyle               : hintfull

! enable colors in native X applications
#ifdef COLOR
*customization              : -color
#endif

! use the Human cursor theme from Ubuntu
Xcursor.theme               : Human

!-----------------------------------------------------------------------------
! rxvt
!-----------------------------------------------------------------------------

! interaction
Rxvt.saveLines              : 8192
Rxvt.scrollTtyOutput        : False
Rxvt.scrollTtyKeypress      : True
Rxvt.scrollWithBuffer       : True
Rxvt.keysym.Control-Up      : \033[1;5A
Rxvt.keysym.Control-Down    : \033[1;5B
Rxvt.keysym.Control-Left    : \033[1;5D
Rxvt.keysym.Control-Right   : \033[1;5C

! appearance
Rxvt.scrollBar_floating     : True
Rxvt.scrollBar_right        : True
Rxvt.font                   : xft:Monospace:pixelsize=13
Rxvt.termName               : xterm-256color

!-----------------------------------------------------------------------------
! XTerm
!-----------------------------------------------------------------------------

! interaction
XTerm*vt100.metaSendsEscape : True
XTerm*vt100.saveLines       : 8192

! appearance
XTerm*vt100.faceName        : Monospace:pixelsize=13
XTerm*termName              : xterm-256color
XTerm*vt100.colorMode       : True
XTerm*vt100.colorBDMode     : True
XTerm*vt100.colorULMode     : True
XTerm*vt100.showBlinkAsBold : True
XTerm*vt100.veryBoldColors  : 6

!-----------------------------------------------------------------------------
! terminal color theme
! http://phraktured.net/terminal-colors/
!-----------------------------------------------------------------------------

!Theme Nineteen
*color0:  rgb:00/00/00
*color1:  rgb:b0/70/50
*color2:  rgb:12/91/4e
*color3:  rgb:a0/a0/70
*color4:  rgb:3e/45/81
*color5:  rgb:a0/70/a0
*color6:  rgb:70/a0/a0
*color7:  rgb:a0/a0/a0
*color8:  rgb:60/60/60
*color9:  rgb:b0/70/50
*color10: rgb:12/91/4e
*color11: rgb:c0/c0/90
*color12: rgb:3e/45/81
*color13: rgb:c0/90/c0
*color14: rgb:90/c0/c0
*color15: rgb:ff/ff/ff
!taken from above: bold=blue underline=green
*colorBD: rgb:3e/45/81
*colorUL: rgb:12/91/4e

!-----------------------------------------------------------------------------
! screensaver
!-----------------------------------------------------------------------------

XLock.mode: space
XLock.nice: 19
