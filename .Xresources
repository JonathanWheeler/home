!-----------------------------------------------------------------------------
! appearance
!-----------------------------------------------------------------------------

! see "font5" in /etc/X11/app-defaults/XTerm
*font                       : -*-fixed-medium-r-*-*-13-*-*-*-*-*-*-*

! make Xft fonts beautiful on LCD monitors
Xft.dpi                     : 96
Xft.hinting                 : true
Xft.hintstyle               : hintfull

! enable colors in native X applications
#ifdef COLOR
*customization              : -color
#endif

! use the Human cursor theme from Ubuntu
Xcursor.theme               : Human

!-----------------------------------------------------------------------------
! rxvt
!-----------------------------------------------------------------------------

! interaction
Rxvt.saveLines              : 8192
Rxvt.scrollTtyOutput        : False
Rxvt.scrollTtyKeypress      : True
Rxvt.scrollWithBuffer       : True
Rxvt.keysym.Control-Up      : \033[1;5A
Rxvt.keysym.Control-Down    : \033[1;5B
Rxvt.keysym.Control-Left    : \033[1;5D
Rxvt.keysym.Control-Right   : \033[1;5C

! appearance
Rxvt.scrollBar_floating     : True
Rxvt.scrollBar_right        : True
Rxvt.font                   : xft:Monospace:size=10

!https://bitbucket.org/redrampage/dotfiles/src/38fb09ee9afb/.Xdefaults
!colors ripped from vim color theme "Wombat"
Rxvt.foreground             : #f6f3e8
Rxvt.background             : #242424

!black
Rxvt.color0                 : #191919
Rxvt.color8                 : #252525

!red
Rxvt.color1                 : #e5786d
Rxvt.color9                 : #eb887e

!green
Rxvt.color2                 : #95e454
Rxvt.color10                : #95f06d

!brown/yellow
Rxvt.color3                 : #cae682
Rxvt.color11                : #daf682

!blue
Rxvt.color4                 : #6aa6c2
Rxvt.color12                : #7ab6d2

!magenta
Rxvt.color5                 : #807caa
Rxvt.color13                : #827ab1

!cyan
Rxvt.color6                 : #8ac6f2
Rxvt.color14                : #a1cdcd

!white
Rxvt.color7                 : #ffffff
Rxvt.color15                : #dddddd

!styles
Rxvt.colorBD                : #8ac6f2
Rxvt.colorUL                : #cae682

!-----------------------------------------------------------------------------
! XTerm
!-----------------------------------------------------------------------------

! interaction
XTerm*vt100.metaSendsEscape : True
XTerm*vt100.saveLines       : 8192

! appearance
XTerm*vt100.faceName        : Monospace:size=10
XTerm*termName              : xterm-256color
XTerm*vt100.colorMode       : True
XTerm*vt100.colorBDMode     : True
XTerm*vt100.colorULMode     : True
XTerm*vt100.showBlinkAsBold : True
XTerm*vt100.veryBoldColors  : 6

!-----------------------------------------------------------------------------
! screensaver
!-----------------------------------------------------------------------------

XLock.mode: space
XLock.nice: 19
